drop TABLE VIEWER cascade constraints;
drop TABLE CHANNEL cascade constraints;
drop TABLE VIDEO cascade constraints;
--drop TABLE INTERACTION cascade constraints;
drop TABLE VIEWER_VIDEO cascade constraints;

CREATE TABLE VIEWER (
    UserID VARCHAR(30) PRIMARY KEY,
    Name VARCHAR2(50),
    Subscribers INTEGER,
    TimeWatched VARCHAR2(50),
    JoinDate DATE
);

CREATE TABLE CHANNEL (
    ChannelID VARCHAR(30) PRIMARY KEY,
    ChannelName VARCHAR2(40),
    SubscriberCount VARCHAR2(20),
    MonetizationStatus VARCHAR2(20),
    CopyrightClaims VARCHAR2(100)
--    ,
--    ViewershipMetrics VARCHAR2(50)
);

CREATE TABLE VIDEO (
    VideoID VARCHAR(20) PRIMARY KEY,
    ChannelID VARCHAR(30),
    Title VARCHAR2(100),
    Views INTEGER,
    Likes INTEGER,
    DateUploaded DATE,
    Genre VARCHAR(20)
--    ,
--    FOREIGN KEY (ChannelID) REFERENCES CHANNEL(ChannelID)
);
/*
CREATE TABLE INTERACTION (
    InteractionID INTEGER PRIMARY KEY,
    ViewerID INTEGER,
    InteractionType VARCHAR2(50),
    InteractionTime TIMESTAMP,
    FOREIGN KEY (ViewerID) REFERENCES VIEWER(UserID)
);
*/
CREATE TABLE VIEWER_VIDEO (
    UserID VARCHAR(30),
    VideoID VARCHAR2(20),
    WatchTime TIMESTAMP,
    WatchDate DATE,
    CommentHistory VARCHAR(200),
--    PRIMARY KEY (UserID, VideoID),
--    FOREIGN KEY (UserID) REFERENCES VIEWER(UserID),
--    FOREIGN KEY (VideoID) REFERENCES VIDEO(VideoID)
--    PRIMARY KEY (UserID),
    FOREIGN KEY (UserID) REFERENCES VIEWER(UserID)
);



